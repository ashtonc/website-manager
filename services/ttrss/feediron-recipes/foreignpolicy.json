{
  "foreignpolicy.com": {
    "type": "xpath",
    "xpath": "article",
    "cleanup": [
      "h3[@class='department']",
      "div[@class='internal-ad-single']",
      "div[starts-with(@class, 'fp-related-wrapper')]",
      "div[@class='related-articles']",
      "div[starts-with(@class, 'taboola')]",
      "div[@class='the-comments']",
      "div[@class='the-tags']",
      "div[@id='ds_cpp']"
    ],
    "force_charset": "utf-8",
    "modify": [
      {
        "type": "replace",
        "search": [
          "srcset",
          "data-src="
        ],
        "replace": [
          "null",
          "src="
        ]
      }
    ]
  }
}
